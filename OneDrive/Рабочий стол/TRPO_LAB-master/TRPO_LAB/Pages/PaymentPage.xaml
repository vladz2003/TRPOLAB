<Page x:Class="TRPO_LAB.Pages.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_LAB.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentPage" >

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Внесено:" FontSize="30"/>
            <TextBlock x:Name="tbEnteredSum" FontSize="30"/>
            <TextBlock Text="Сумма к оплате: " x:Name="tbSum" FontSize="30" Margin="0 50 0 0"/>
            <Button x:Name="btnPay" Content="Оплатить" Width="150" Margin="0 50 0 0"></Button>
        </StackPanel>
        
    </Grid>
</Page>
